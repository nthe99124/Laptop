<script>
    function loctheothang() {

        var key = $("#loctheothang").val();
        $.ajax({
            url: "/Home/Statistical_month?&month=" + key,
            success: function (result) {
                $("#Danh_Sach").empty();
                $("#Danh_Sach").append(result);
            }
        })
    }
</script>

