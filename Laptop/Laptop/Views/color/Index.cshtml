            <div class="card-header">
                <h3 class="card-title" style="text-align:center; width:100%">Form thêm màu</h3>
            </div>
            <form method="post" action="/color/Index">
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr align="center">
                                <th>Màu</th>
                                <th>Hình ảnh</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr class="odd gradeX" align="center">
