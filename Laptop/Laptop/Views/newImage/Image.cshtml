                        <tr align="center">
                            <th>ID New</th>
                            <th>Hình ảnh</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.image)
                        {
                            <tr class="odd gradeX" align="center">
                                <td>@item.ID_New</td>
                                <td><img style="width:70px; height:70px" src="@item.Image" /></td>
                                <td>
                                    @Html.ActionLink("Xóa", "Delete_img", new { id = item.ID })
                                </td>
                            </tr>
                        }
