@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Statistical">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Form sửa thông news hãng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="card-body">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title" style="text-align:center; width:100%">Form sửa thông news hãng</h3>
                </div>
                <form role="form" method="post" action="/Brand/Edit/@Model.ID"
                      enctype="multipart/form-data">
                    <div class="card-body">                        
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên hãng</th>
                                <th>Mô tả</th>
                                <th>Logo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <tr>
                                <td>
                                    @Model.ID
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                                <td>
                                    <input type="text" class="form-control" placeholder="Điền mô tả"
                                          name="MoTa" value="@Model.Description">
                                </td>
                                <td>
                                <input type="text" class="form-control" placeholder="Điền link logo"
                                       name="logo" value="@Model.Image">
                                </td>

                                <td>
                                    
                                    <button type="submit" class="btn btn-primary">Sửa</button>
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                        </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

