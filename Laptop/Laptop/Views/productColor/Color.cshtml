            </div>
            <form method="post" action="/productColor/Color">
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr align="center">
                                <th>ID sản phẩm</th>
                                <th>ID màu</th>
                                <th>Số lượng</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr class="odd gradeX" align="center">
                                <td>
                                    <input required="" type="text" name="ID_SP" style="width:100px" list="dl" placeholder="Điền ID sản phẩm">
                                    <datalist id="dl">
                                        @foreach (var item in ViewBag.product)
                                        {
                                            <option value="@item.ID">@item.Name </option>
                                        }
                                    </datalist>
                                    @*<input type="text" class="form-control" placeholder="Điền ID sản phẩm" name="ID_SP">*@
                                </td>
                                <td>
                                    <input required="" type="text" name="Mau" list="dl1" style="width:100px" placeholder="Điền ID màu">
                                    <datalist id="dl1">
                                        @foreach (var item in ViewBag.co)
                                        {
                                            <option value="@item.ID">@item.Color </option>
                                        }
                                    </datalist>
                                    @*<input type="text" class="form-control" placeholder="Điền ID màu" name="Mau">*@
                                </td>
                                <td>
                                    <input type="text" class="form-control" placeholder="Điền số lượng" name="SL">
                                </td>
                                <!--<td>-->
                                @*<img src="@Model.Image" width="100" height="100" />*@
                                <!--<input type="text" class="form-control" placeholder="Điền link ảnh" name="Anh">
                                </td>-->
                                <td>
                                    <button type="submit" class="btn btn-primary">Thêm</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
            <b style="text-align:center; color:red">@ViewBag.test</b>
        </div>
        <div>
            <br />
            <br />
        </div>
        <div class="card card-primary" style="">
