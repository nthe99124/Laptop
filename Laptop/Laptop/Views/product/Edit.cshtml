
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Statistical">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Form sửa thông news sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="card-body pad">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title" style="text-align:center; width:100%">Form sửa thông news sản phẩm</h3>
                </div>
                <form role="form" method="post" action="/Product/Edit/@Model.ID"
                      enctype="multipart/form-data">
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr align="center">
                                    <th>Tên sản phẩm</th>
                                    <th>ID hãng</th>
                                    <th>Phân loại</th>
                                    <th>Mô tả</th>
                                    <th>Giá gốc</th>
                                    <th>Giá khuyến mại</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" align="center">
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền tên sản phẩm"
                                               name="Ten" value="@Model.Name">
                                    </td>
                                    <td>
                                        <input required="" type="text" name="ID_Hang" value="@Model.ID_Brand" list="dl">
                                        <datalist id="dl">
                                            @foreach (var item in ViewBag.brand)
                                            {
                                                <option value="@item.ID">@item.Name</option>
                                            }
                                        </datalist>
                                    </td>

                                    <td>
                                        <input required="" type="text" name="Phanloai" value="@Model.Group_Pro" list="dl1">
                                        <datalist id="dl1">
                                            <option value="Học tập - Văn phòng">Học tập - Văn phòng</option>
                                            <option value="Đồ họa - Kỹ thuật">Đồ họa - Kỹ thuật</option>
                                            <option value="Laptop Gaming">Laptop Gaming</option>
                                            <option value="Cao cấp - Sang trọng">Cao cấp - Sang trọng</option>
                                        </datalist>
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền mô tả"
                                               name="MoTa" value="@Model.Description">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền giá gốc"
                                               name="Pri" value="@string.Format("{0:#,##0}",Model.Price)">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền giá KM"
                                               name="Pro_Price" value="@string.Format("{0:#,##0}",@Model.Promotion_Price)">
                                    </td>
                                </tr>
                            </tbody>
                            <thead>
                                <tr align="center">
                                    <th>Avatar</th>
                                    <th>CPU</th>
                                    <th>GPU</th>
                                    <th>RAM</th>
                                    <th>ROM</th>
                                    <th>Màn hình</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" align="center">
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền link ảnh"
                                               name="Anh" value="@Model.Image">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền CPU"
                                               name="CPU" value="@Model.CPU">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền GPU"
                                               name="GPU" value="@Model.GPU">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền RAM"
                                               name="RAM" value="@Model.RAM">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền ROM"
                                               name="ROM" value="@Model.ROM">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền màn hình"
                                               name="Moni" value="@Model.Monitor">
                                    </td>
                                </tr>
                            </tbody>
                            <thead>
                                <tr align="center">
                                    <th>Hệ điều hành</th>
                                    <th>Bảo hành</th>
                                    <th>Pin</th>
                                    <th>Kích thước</th>
                                    <th>Cân nặng</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" align="center">
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền hệ điều hành"
                                               name="Ope" value="@Model.Operating">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền thời hạn bảo hành"
                                               name="Warr" value="@Model.Warranty">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền pin" 
                                               name="pin" value="@Model.Pin">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền kích thước" 
                                               name="size" value="@Model.Size">
                                    </td>
                                    <td>
                                        <input required="" type="text" class="form-control" placeholder="Điền cân nặng"
                                               name="weight" value="@Model.Weight">
                                    </td>
                                    <td style="text-align:center">
                                        <button type="submit" class="btn btn-primary">Sửa</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

