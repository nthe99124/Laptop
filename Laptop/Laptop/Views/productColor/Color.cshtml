                        <tr align="center">
                            <th>ID sản phẩm</th>
                            <th>ID màu</th>
                            <th>Số lượng</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.color)
                        {
                            <tr class="odd gradeX" align="center">
                                <td>@item.ID_Product<br />
                                (@item.Name)
                                </td>
                                <td>@item.ID_Color<br />
                                (@item.Color)
                                </td>
                                <td>@item.Quantity</td>
                                <td>
                                    @Html.ActionLink("Xóa", "Delete_co", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

