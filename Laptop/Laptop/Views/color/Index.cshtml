            </div>
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr align="center">
                            <th>ID</th>
                            <th>Màu</th>
                            <th>Hình ảnh</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.color)
                        {
                        <tr class="odd gradeX" align="center">
                            <td>@item.ID</td>
                            <td>@item.Color</td>
                            <td><img style="width:70px; height:70px" src="@item.Image" /></td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

